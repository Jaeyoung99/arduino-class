const int buzzer0 = 9;    // connect the buzzer to pin 9
const char song="";

void buzz(int note, int delay_num){
  tone(buzzer0,note,delay_num);
  delay(delay_num);

}
void tng(){
  buzz(720,2500);
  buzz(550,2500);
  buzz(654,2500);
  buzz(484,2500);
  delay(30);
  buzz(670,2500);
  buzz(500,2500);
  buzz(600,2500);
  buzz(445,2500);
  buzz(300,800);
  buzz(400,400);
  buzz(540,1100);
  delay(30);
  buzz(530,1100);
  buzz(400,1000);

}
void setup(){
  tng();
}

void loop() 
{


}



