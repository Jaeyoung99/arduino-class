char keypad_pin=0;
bool keypad_data=0;
bool keypad_press_data[2][4]={
  {0,0,0,0}, //rows
  {0,0,0,0} //columns
};

const char row1=9;
const char row2=8;
const char row3=7;
const char row4=6;
const char column1=5;
const char column2=4;
const char column3=3;
const char column4=2;


char keypad_sweep(bool HIGH_or_LOW){
//jump
  
  if(HIGH_or_LOW){ 

    keypad_pin=row1;
    pinMode(row1,INPUT_PULLUP);
    keypad_pin=row2;
    pinMode(row2,INPUT_PULLUP);
    keypad_pin=row3;
    pinMode(row3,INPUT_PULLUP);
    keypad_pin=row4;
    pinMode(row4,INPUT_PULLUP);
    keypad_pin=column1;
    pinMode(column1,OUTPUT);
    keypad_pin=column2;
    pinMode(column2,OUTPUT);
    keypad_pin=column3;
    pinMode(column3,OUTPUT);
    keypad_pin=column4;
    pinMode(column4,OUTPUT);

    keypad_press_data[0][0]=digitalRead(row1); //if HIGH rows
    keypad_press_data[0][1]=digitalRead(row2);
    keypad_press_data[0][2]=digitalRead(row3);
    keypad_press_data[0][3]=digitalRead(row4);
}
else{

    keypad_pin=column1;
    pinMode(column1,INPUT_PULLUP);
    keypad_pin=column2;
    pinMode(column2,INPUT_PULLUP);
    keypad_pin=column3;
    pinMode(column3,INPUT_PULLUP);
    keypad_pin=column4;
    pinMode(column4,INPUT_PULLUP);
    keypad_pin=row1;
    pinMode(row1,OUTPUT);
    keypad_pin=row2;
    pinMode(row2,OUTPUT);
    keypad_pin=row3;
    pinMode(row3,OUTPUT);
    keypad_pin=row4;
    pinMode(row4,OUTPUT);
    keypad_press_data[1][0]=digitalRead(column1);
    keypad_press_data[1][1]=digitalRead(column2);
    keypad_press_data[1][2]=digitalRead(column3);
    keypad_press_data[1][3]=digitalRead(column4);


}
}

