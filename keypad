const char row0=9;
const char row1=8;
const char row2=7;
const char row3=6;
const char column0=5;
const char column1=4;
const char column2=3;
const char column3=2;

bool keypad_data[8]={0,0,0,0,0,0,0,0};

void set_8_modes(char a, char b,char c,char d,char e,char f,char g,char h){
  pinMode(a,INPUT_PULLUP);
  pinMode(b,INPUT_PULLUP);
  pinMode(c,INPUT_PULLUP);
  pinMode(d,INPUT_PULLUP);
  pinMode(e,OUTPUT);
  pinMode(f,OUTPUT);
  pinMode(g,OUTPUT);
  pinMode(h,OUTPUT);
}

void keypad_scan(bool HIGH_or_LOW){
  if(HIGH_or_LOW){ //if HIGH rows
    set_8_modes(row0,row1,row2,row3,column0,column1,column2,column3);
    keypad_data[0]=digitalRead(row0); 
    keypad_data[1]=digitalRead(row1);
    keypad_data[2]=digitalRead(row2);
    keypad_data[3]=digitalRead(row3);
  }
  else{  //if low columns
    set_8_modes(column0,column1,column2,column3,row0,row1,row2,row3);
    keypad_data[4]=digitalRead(column0);
    keypad_data[5]=digitalRead(column1);
    keypad_data[6]=digitalRead(column2);
    keypad_data[7]=digitalRead(column3);
  }
}

void setup() {

  pinMode(10,OUTPUT);

}
int blink_time=30;
void blink(){
  digitalWrite(10,HIGH);
  delay(blink_time);
  digitalWrite(10,LOW);
  delay(blink_time);
}

int delay_time=2000;
void display_data(char index){
  digitalWrite(10,keypad_data[index]);
  delay(delay_time);
  blink();
  blink();
  blink();
}

void loop() {
  //all the lines below are meant to be uncommented
  keypad_scan(HIGH);

  display_data(0);
  display_data(1);
  display_data(2);
  display_data(3);
  display_data(4);
  display_data(5);
  display_data(6);
  display_data(7);
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();
  blink();

}
