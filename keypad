char keypad_pin=0;
bool keypad_data=0;
char column;
char row;

const char row1=5;
const char row2=4;
const char row3=3;
const char row4=2;
const char column1=9;
const char column2=8;
const char column3=7;
const char column4=6;


void action(char action){
  switch(action){
  case 'i':
    pinMode(keypad_pin,INPUT_PULLUP);
    break;
  case 'o':
    pinMode(keypad_pin,OUTPUT);
    break;
  case 'r':
    keypad_data=digitalRead(keypad_pin);
    break;
  case 'w':
  digitalWrite(keypad_pin,keypad_data);
  break;
  }
}
void keypad_fill(bool HIGH_or_LOW){
  if(HIGH_or_LOW){
    keypad_pin=row1;
    action('i');
    keypad_pin=row2;
    action('i');
    keypad_pin=row3;
    action('i');
    keypad_pin=row4;
    action('i');
    keypad_pin=column1;
    action('o');
    keypad_pin=column2;
    action('o');
    keypad_pin=column3;
    action('o');
    keypad_pin=column4;
    action('o');
  }
  else{
    keypad_pin=column1;
    action('i');
    keypad_pin=column2;
    action('i');
    keypad_pin=column3;
    action('i');
    keypad_pin=column4;
    action('i');
    action('o');
    keypad_pin=row2;
    action('o');
    keypad_pin=row3;
    action('o');
    keypad_pin=row4;
    action('o');
  }
}

char keypad_sweep(bool HIGH_or_LOW){
  bool make_loop=1;
  while(make_loop){

  if(HIGH_or_LOW){

    row=row1;
    keypad_pin=row;
    action('r');
    if(keypad_data){
      break;
    }
    row=row2;
    keypad_pin=row;
    action('r');
    if(keypad_data){
      break;
    }
    row=row3;
    keypad_pin=row;
    action('r');
    if(keypad_data){
      break;
    }
    row=row4;
    keypad_pin=row;
    action('r');
    if(keypad_data){
      break;
    }
  }
  else{
    column=column1;
    keypad_pin=column;
    action('r');
    if(keypad_data){
      break;
    }
    column=column2;
    keypad_pin=column;
    action('r');
    if(keypad_data){
      break;
    }
    column=column3;
    keypad_pin=column;
    action('r');
    if(keypad_data){
      break;
    }
    column=column4;
    keypad_pin=column;
    action('r');
    if(keypad_data){
      break;
    }
  }
 make_loop=0;
}
}

char read_keypad_index(){
  keypad_fill(HIGH);
  keypad_sweep(HIGH);
  if(keypad_data){
    keypad_fill(LOW);
    keypad_sweep(LOW);
    keypad_data=0;
    switch(row){
    case row1:
      switch(column){
      case column1:
      return 0;
      break;
      case column2:
      return 1;
      break;
      case column3:
      return 1;
      break;
      case column4:
      return 3;
      break;
      }
      break;
    case row2:
      switch(column){
      case column1:
      return 4;
      break;
      case column2:
      return 5;
      break;
      case column3:
      return 6;
      break;
      case column4:
      return 7;
      break;
      }
      break;
    case row3:
      switch(column){
      case column1:
      return 8;
      break;
      case column2:
      return 9;
      break;
      case column3:
      return 10;
      break;
      case column4:
      return 11;
      break;
      }
      break;
    case row4:
      switch(column){
      case column1:
      return 12;
      break;
      case column2:
      return 13;
      break;
      case column3:
      return 14;
      break;
      case column4:
      return 15;
      break;
      }
      break;
    }
  }
}

char read_keypad(){
  switch((int) read_keypad_index){
  case 0:
    return '1';
    break;
  case 1:
  return '2';
    break;
  case 2:
  return '3';
    break;
  case 3: 
    return 'A';
      break;
  case 4:
    return '4';
    break;
  case '5':
    return 5;
    break;
  case 6:
  return '6';
  break;
  case 7:
    return 'B';
    break;
  case 8:
    return '7';
    break;
  case 9:
    break;
    return '8';
      break;
  case 10:
    return '9';
    break;
  case 11:
    return 'C';
  case 12:
    return "*";
    break;
  case 13:
    return '0';
    break;
  case 14:
    return '#';
    break;
  case 15:
    return 'D';
    break;
  }

}

void test_with_blinks(){
  keypad_pin=10;
  char index=read_keypad_index()+1;
  while(index--){
  action('o');
  keypad_data=1;
  action('w');
  delay(100);
  keypad_data=0;
  action('w');
  delay(100);
}

}
void setup() {
}

void loop() {
test_with_blinks();
}
