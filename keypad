//Make sure to change these pins to match your board.
unsigned row0=9,row1=8,row2=7,row3=6,column0=5,column1=4,column2=3,column3=2,keystroke;

void set_4_modes(char a, char b, char c, char d, char mode){
  pinMode(a,mode); //sets mode for pin a
  pinMode(b,mode); //sets mode for pin b
  pinMode(c,mode); //sets mode for pin c
  pinMode(d,mode); //sets mode for pin d
}
void keypad_r(char x){keystroke=(keystroke << 1) + digitalRead(x);}
void keyboard_half_read(char a,char b,char c,char d,char e,char f,char g,char h){
  set_4_modes(a,b,c,d,INPUT_PULLUP);set_4_modes(e,f,g,h,OUTPUT); //set modes
  keypad_r(a);keypad_r(b);keypad_r(c);keypad_r(d); //record 4 rows or columns
}
void keypad_read(bool HIGH_or_LOW){   //I am trying to eliminate this function.
  if(HIGH_or_LOW){                    //if HIGH, scan rows
    keyboard_half_read(row0,row1,row2,row3,column0,column1,column2,column3);
  }
  else{                               //if LOW,  scan columns
    keyboard_half_read(column0,column1,column2,column3,row0,row1,row2,row3);
  } //The if/else statement here shouldn't be necessary. I am looking to remove it.
}

bool extract_bit(unsigned char data, char index){return (data >> index) & 1;}

void setup() {

  pinMode(10,OUTPUT);

}

int blink_time=30;
void blink(){
  digitalWrite(10,HIGH);
  delay(blink_time);
  digitalWrite(10,LOW);
  delay(blink_time);
}

int delay_time=2000;
void display_bit(char pin, bool bit){
  for(char i=0;i<6;i++){blink();}
  digitalWrite(pin,bit);
  delay(delay_time);
}

void display_byte(char pin,char data){
  display_bit(pin,extract_bit(data,0));
  display_bit(pin,extract_bit(data,1));
  display_bit(pin,extract_bit(data,2));
  display_bit(pin,extract_bit(data,3));
  display_bit(pin,extract_bit(data,4));
  display_bit(pin,extract_bit(data,5));
  display_bit(pin,extract_bit(data,6));
  display_bit(pin,extract_bit(data,7));
  for(int i=0;i<36;i++){blink();}
  digitalWrite(pin,LOW);
  delay(delay_time);
}

void loop() {

  keystroke=keystroke << 4; //I have to shift in 4 bits since one keypad_read is missing.

  //I can not read HIGH and LOw in the same program for some reason.
  //when I read both HIGH and LOW all the bits are always HIGH
    keypad_read(HIGH);
  keypad_read(HIGH);

  digitalWrite(10,extract_bit(keystroke,7));


}
